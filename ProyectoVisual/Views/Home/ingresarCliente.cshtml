@using System.Web.Mvc
<!DOCTYPE html>
<html>
<head>
    <title>Ingresar Cliente</title>
</head>
<body>
    <h2>Ingresar Cliente</h2>

    @if (ViewBag.Mensaje != null)
    {
        <p>@ViewBag.Mensaje</p>
    }

    <form id="clienteForm" action="/Home/IngresarCliente" method="post">
        <fieldset>
            <legend>Datos del Cliente</legend>

            <div>
                <label for="Cedula">Cédula:</label>
                <input type="number" id="Cedula" name="Cedula" required>
            </div>

            <div>
                <label for="Nombre">Nombre:</label>
                <input type="text" id="Nombre" name="Nombre" required>
            </div>

            <div>
                <label for="Apellido">Apellido:</label>
                <input type="text" id="Apellido" name="Apellido" required>
            </div>

            <div>
                <label for="Estrato">Estrato:</label>
                <input type="number" id="Estrato" name="Estrato" required>
            </div>

            <div>
                <label for="MetaAhorro">Meta de Ahorro:</label>
                <input type="number" id="MetaAhorro" name="MetaAhorro" required>
            </div>

            <div>
                <label for="ConsumoEnergia">Consumo de Energía:</label>
                <input type="number" id="ConsumoEnergia" name="ConsumoEnergia" required>
            </div>

            <div>
                <label for="ConsumoAgua">Consumo de Agua:</label>
                <input type="number" id="ConsumoAgua" name="ConsumoAgua" required>
            </div>

            <div>
                <label for="PromedioAgua">Promedio de Agua:</label>
                <input type="number" id="PromedioAgua" name="PromedioAgua" required>
            </div>

            <div>
                <label for="PeriodoDeConsumo">Periodo de Consumo:</label>
                <input type="text" id="PeriodoDeConsumo" name="PeriodoDeConsumo" required>
            </div>

            <p>
                <input type="button" value="Agregar Cliente" onclick="submitForm()" />
            </p>
        </fieldset>
    </form>

    <script>
        function submitForm() {
            var form = document.getElementById("clienteForm");
            form.submit();
        }
    </script>
</body>
</html>
