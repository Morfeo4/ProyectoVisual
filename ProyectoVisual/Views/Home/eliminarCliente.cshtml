@{
    ViewBag.Title = "Eliminar Cliente";
}

<h2>Eliminar Cliente</h2>

<form id="eliminarClienteForm" action="@Url.Action("EliminarCliente", "Cliente")" method="post">
    <div>
        <label for="nombreCliente">Nombre del Cliente:</label>
        <input type="text" id="nombreCliente" name="nombreCliente" required>
    </div>
    <button type="submit" onclick="return confirm('¿Estás seguro de que quieres eliminar este cliente?')">Eliminar</button>
</form>

<div id="mensaje">
    @if (TempData["Mensaje"] != null)
    {
        <p>@TempData["Mensaje"]</p>
    }
</div>

@section Scripts {
    <script>
        var mensaje = document.getElementById('mensaje').textContent;
        if (mensaje) {
            alert(mensaje);
        }
    </script>
}
